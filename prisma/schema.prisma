generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  food
  transportation
  utilities
  entertainment
  health
  education
  shopping
  savings
  others
}

// n. Add user account
model User {
  id        String     @id @default(uuid())
  firstName String
  lastName  String
  email     String     @unique
  username  String
  password  String
  contactNo String
  income    Income[]
  expenses  Expenses[]
}

model Income {
  id          String   @id @default(uuid())
  title       String
  amount      Float
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

// üìù n. Add Expenses. Input: title, amount, date, category, optional note. Example: Groceries - $50 - May 30 - Food === DONE
model Expenses {
  id          String   @id @default(uuid())
  title       String
  amount      Float
  category    Category @default(others)
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

