generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  food
  transportation
  utilities
  entertainment
  health
  education
  shopping
  savings
  others
}

// üìù 1. Add Expenses. Input: title, amount, date, category, optional note. Example: Groceries - $50 - May 30 - Food === DONE
model Expenses {
  id          String   @id @default(uuid())
  title       String
  amount      Float
  category    Category @default(others)
  description String
  date        DateTime @default(now())
}

